doctype
html
  head
    title #{title} - Admin Panel
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/style.css')
    script(src='/js/jquery.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/store.js')
  body
  .navbar.navbar-inverse.navbar-fixed-top
        .container
            .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='#') AdapCom - Admin Panel
            .collapse.navbar-collapse
                ul.nav.navbar-nav
                    li.active
                        a(href='#') Dashboard
   .container(style='margin-top:30px;')
   .page-header
        h2 Dashboard
      .row
        .col-sm-16
          .panel.panel-primary
            .panel-heading
              h3.panel-title Service Status
            .panel-body 
              .row(style='padding-top:10px; padding-left:10px; padding-right:10px;') Login Service
                span(style='float:right;').btn.btn-xs.btn-success(type='button') OK
              .row(style='padding-top:10px; padding-left:10px; padding-right:10px;') Get Product Details 
                span(style='float:right;').btn.btn-xs.btn-success(type='button') OK
              .row(style='padding-top:10px; padding-left:10px; padding-right:10px;') Cart Product Add
                span(style='float:right;').btn.btn-xs.btn-success(type='button') OK
              .row(style='padding-top:10px; padding-left:10px; padding-right:10px;') Cart Product Remove
                span(style='float:right;').btn.btn-xs.btn-success(type='button') OK
              .row(style='padding-top:10px; padding-left:10px; padding-right:10px;') View Cart
                span(style='float:right;').btn.btn-xs.btn-success(type='button') OK
          .panel.panel-primary
            .panel-heading
              h3.panel-title Server Information
            .panel-body
              | <form class="form-horizontal" id="configSubmit" role="form" onsubmit="return false;"> <div class="form-group"> <label for="httpPort" class="col-sm-2 control-label">HTTP Server Port</label> <div class="col-sm-10"> <input type="text" class="form-control" name="httpPort" id="httpPort" placeholder="ex:80, 8080, 8000" value="3000"> </div> </div> <div class="form-group"> <label for="HTTPS" class="col-sm-2 control-label">HTTPS Enable</label> <div class="col-sm-10"><label class="radio-inline"> <input type="radio" name="httpsEnable" id="inlineRadio1" value="1" checked> Enable </label> <label class="radio-inline"> <input type="radio" name="httpsEnable" id="inlineRadio2" value="0"> Disable </label></div> </div> </form>
          .panel.panel-primary
            .panel-heading
              h3.panel-title Logs
            .panel-body
              | <div id="logDisplay" style="max-height:220px; overflow-y:auto;"></div>